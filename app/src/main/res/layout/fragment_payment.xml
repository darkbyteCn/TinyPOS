<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OrderFragment.FoodDetailFragment"
    android:clickable="true"
    android:focusable="true"
    android:contextClickable="true"
    android:focusableInTouchMode="true"
    android:touchscreenBlocksFocus="true"
    android:background="#fff">

    <LinearLayout
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/go_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/back"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Food Name"
            android:id="@+id/title" />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/check"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/confirm"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="end"
                    android:text="Subtotal:"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$1.00"
                    android:gravity="end"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtotal" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="end"
                    android:text="Tax:"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$1.00"
                    android:gravity="end"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tax" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="end"
                    android:text="Total:"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$1.00"
                    android:gravity="end"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/total" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="end"
                    android:text="Due:"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$1.00"
                    android:gravity="end"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/due" />
            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
                <ListView
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:divider="@null"
                    android:scrollbarStyle="outsideOverlay"
                    android:id="@+id/paymentList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/paymentListEmptyView"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="No Payment. Click here to collect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout android:layout_height="70dp" android:layout_width="match_parent"
        android:orientation="horizontal" android:layout_gravity="bottom"
        android:background="?attr/colorPrimary">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/check"
            android:text="Add Payment"
            android:id="@+id/addPayment"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/check"
            android:text="Pay Only"
            android:id="@+id/payOnly"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/check"
            android:text="Pay &amp; Complete"
            android:id="@+id/payAndComplete"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
    </LinearLayout>

</FrameLayout>
