<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardPreventCornerOverlap="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="6/6"
                android:drawablePadding="8dp"
                android:id="@+id/table_capacity"
                android:drawableLeft="@drawable/people"
                android:gravity="center"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="PK"
                android:drawablePadding="8dp"
                android:id="@+id/table_waiter"
                android:drawableLeft="@drawable/waiter"
                android:gravity="center"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0/12"
                android:drawablePadding="8dp"
                android:id="@+id/table_items_count"
                android:drawableLeft="@drawable/food"
                android:gravity="center"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="12m"
                android:drawablePadding="8dp"
                android:id="@+id/table_time"
                android:drawableLeft="@drawable/clock"
                android:gravity="center"
                />

        </LinearLayout>

        <TextView
            android:background="@drawable/dine_in_table_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:text="1"
            android:id="@+id/table_id"
            android:layout_gravity="top|right"
            android:gravity="center"
            />

    </FrameLayout>
</android.support.v7.widget.CardView>