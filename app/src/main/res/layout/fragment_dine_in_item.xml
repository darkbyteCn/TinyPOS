<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/dine_in_table"
    android:padding="6dp"
    >

    <TextView
        android:background="@drawable/dine_in_table_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1"
        android:layout_centerInParent="true"
        android:id="@+id/table_id"
        android:textColor="#fff"
        android:textStyle="italic"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="PK"
        android:drawablePadding="4dp"
        android:id="@+id/table_waiter"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/waiter"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="6/6"
        android:drawablePadding="4dp"
        android:id="@+id/table_capacity"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/people"
        android:gravity="center"
        />

    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/12"
        android:drawablePadding="4dp"
        android:id="@+id/table_items_count"
        android:layout_alignParentRight="true"
        android:layout_below="@id/table_capacity"
        android:drawableRight="@drawable/food"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="12m"
        android:drawablePadding="4dp"
        android:id="@+id/table_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:drawableRight="@drawable/clock"
        android:gravity="center"
        />

</RelativeLayout>