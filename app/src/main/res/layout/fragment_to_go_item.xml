<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardPreventCornerOverlap="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:background="@drawable/delivery_ticket_number_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:text="1"
            android:id="@+id/ticket_id"
            android:layout_gravity="top|left"
            android:gravity="center"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            android:gravity="center_vertical|right">

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Mrs. Lee(425-392-1859)"
                android:drawablePadding="8dp"
                android:id="@+id/ticket_customer"
                android:drawableRight="@drawable/waiter"
                android:gravity="center"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="PK"
                android:drawablePadding="8dp"
                android:id="@+id/ticket_waiter"
                android:drawableRight="@drawable/waiter"
                android:gravity="center"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0/12"
                android:drawablePadding="8dp"
                android:id="@+id/ticket_items_count"
                android:drawableRight="@drawable/food"
                android:gravity="center"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="12m"
                android:drawablePadding="8dp"
                android:id="@+id/ticket_elapsed_time"
                android:drawableRight="@drawable/clock"
                android:gravity="center"
                />

        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
